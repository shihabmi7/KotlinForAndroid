            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.mvvm.ui.AddNoteActivity"
            android:exported="true"
            android:parentActivityName=".feature.mvvm.ui.NoteActivity" />
        <activity
            android:name=".feature.parcelable.ReceiveParcelableAcitivty"
            android:exported="true" />
